{
  "name": "respoke-screen-sharing-nwjs",
  "main": "index.html",
  "single-instance": false,
  "scripts": {
    "start": "nw"
  },
  "window": {
    "title": "respoke screen sharing nwjs demo",
    "icon": "icon.png",
    "toolbar": true,
    "frame": true,
    "width": 800,
    "height": 500,
    "position": "mouse"
  },
  "chromium-args": "--enable-usermedia-screen-capturing",
  "dependencies": {
    "nw": "^0.12.0-1"
  },
  "webkit": {
    "plugin": true
  }
}
